@page
@model Market.Pages.Items.ShowItemsModel
@{
    ViewData["Title"] = "ShowItems";
}

<h2>Show Items</h2>
<h1>@Model.AllItems.Count</h1>

<div class="container">
    <a class="btn btn-info" asp-page="Create">Create new Item </a>
</div>

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Item Name</th>
                <th>Item Price</th>
                <th>Group Name</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllItems)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.ItemName</td>
                <td>@item.ItemPrice</td>
                <td>@item.Groups.GroupName</td>
                <td>
                    <img src="/Images/@item.ImagePath" alt="Eagle" style="width:50px"/>
                </td>
                <td>
                    <a asp-page="Details" asp-route-Id="@item.Id">Details</a>
                    <a asp-page="Edit" asp-route-id="@item.Id">| Edit |</a>
                    <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
